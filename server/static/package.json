{
  "name": "boardgame-webapp",
  "version": "0.1.0",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0",
    "vite": "^6.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "type-check": "tsc --noEmit",
    "type-check:strict": "tsc --noEmit -p tsconfig.strict.json",
    "type-check:strict-migration": "tsc --noEmit -p tsconfig.strict-migration.json",
    "test": "npm run test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "HEADED=1 playwright test",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@material/web": "^2.2.0",
    "firebase": "^11.1.0",
    "lit": "^3.2.1",
    "pwa-helpers": "^0.9.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "reselect-tools": "0.0.7"
  }
}
