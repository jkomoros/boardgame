{
  "mcpServers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@playwright/mcp@latest"
      ],
      "env": {
        "PLAYWRIGHT_CONFIG": "./server/static/playwright.config.ts",
        "MCP_CONFIG_FILE": "./.playwright-mcp-config.json"
      }
    }
  }
}